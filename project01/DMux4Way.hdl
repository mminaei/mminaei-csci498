/**
 * 4-way demultiplexor.  The 2-bit sel input selects the output to which 
 * the in input will be channeled: 00 to a, 01 to b, 10 to c, 11 to d.
 * The other outputs are set to 0.
 */

CHIP DMux4Way {

    IN  in, sel[2];
    OUT a, b, c, d;

    PARTS:
    Not(in=sel[1], out=nsel1);
    Not(in=sel[0], out=nsel0);

    Or(a=sel[0], b=sel[1], out=a11);
    Not(in=a11, out=a1); 
    And(a=sel[0], b=nsel1, out=b1);
    And(a=nsel0, b=sel[1], out=c1);
    And(a=sel[0], b=sel[1], out=d1);

    And(a=a1, b=in, out=a);
    And(a=b1, b=in, out=b);
    And(a=c1, b=in, out=c);
    And(a=d1, b=in, out=d);


}

